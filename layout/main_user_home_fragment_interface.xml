<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#14213d"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#14213d"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_contents"
                android:text="Categories"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="45sp"
                android:textStyle="italic"
                android:layout_marginBottom="15dp"
                android:textColor="@color/white"

                >

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"

                >
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/lotte_content_vege"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_fileName="veges.json"

                    >

                </com.airbnb.lottie.LottieAnimationView>

                <Button
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:text="Vegetables"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:id="@+id/btn_vege"
                    android:textStyle="italic"

                    app:backgroundTint="#14213d"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"

                >
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/lotte_content_stationary"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_fileName="stationary.json"

                    >

                </com.airbnb.lottie.LottieAnimationView>

                <Button
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:text="Stationary"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:id="@+id/btn_stationary"
                    android:textStyle="italic"

                    app:backgroundTint="#14213d"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"

                >
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/lotte_content_grocery"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_fileName="grocery.json"

                    >

                </com.airbnb.lottie.LottieAnimationView>

                <Button
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:text="Grocery"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:id="@+id/btn_grocery"
                    android:textStyle="italic"

                    app:backgroundTint="#14213d"
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"

                >
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:id="@+id/lotte_content_medicine"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_fileName="medicine.json"

                    >

                </com.airbnb.lottie.LottieAnimationView>

                <Button
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:text="Medicine"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:id="@+id/btn_Medicine"
                    android:textStyle="italic"
                    app:backgroundTint="#14213d"
                    />



            </LinearLayout>


        </LinearLayout>
    </ScrollView>



</LinearLayout>