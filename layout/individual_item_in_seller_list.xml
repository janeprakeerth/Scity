<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/each_item_of_seller_box"
    android:id="@+id/ll_each_item_selller"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical"
    android:layout_height="100dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
<com.airbnb.lottie.LottieAnimationView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="2"
    app:lottie_autoPlay="true"
    app:lottie_loop="true"
    app:lottie_fileName="shop lotte animation.json"
    />


    <TextView
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        tools:text="SHOP NAME"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#fca311"
        android:id="@+id/tv_seller_name"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="40dp"
        >
        <TextView
            android:layout_width="0dp"
            tools:text="Address"
            android:textColor="#fca311"
            android:textSize="22sp"
            android:gravity="center"
            android:textStyle="italic"
            android:id="@+id/tv_adress_seller_shop"
            android:layout_height="match_parent"
            android:layout_weight="3"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            tools:text="9131671234"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#fca311"
            android:id="@+id/tv_number_seller"
            />

    </LinearLayout>



</LinearLayout>