<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#14213d"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="100dp"
        app:lottie_loop="true"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_fileName="profile_icon.json"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Name:"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sample_name"
            android:textStyle="italic"
            android:textColor="#ffffff"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Email-id:"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/user_profile_email_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sample_email id"
            android:layout_marginStart="10dp"
            android:textStyle="italic"
            android:textColor="#ffffff"
            android:textSize="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Address:"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/user_profile_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sample_address"
            android:textStyle="italic"
            android:textColor="#ffffff"
            android:layout_marginStart="10dp"
            android:textSize="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Number:"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/user_profile_mobile_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="italic"
            android:textColor="#ffffff"
            android:text="Sample_Mobile_Number"
            android:layout_marginStart="10dp"
            android:textSize="15dp"

            />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
    android:layout_margin="10dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:textColor="#ffffff" android:text="Password"
        android:textStyle="bold"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/user_profile_password"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Sample_Password"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:layout_marginStart="10dp"
        android:textSize="15dp"
        />
</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER DETAILS"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="100dp"

        >

    </TextView>
</LinearLayout>