<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#14213d"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sc_view">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="18dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_gravity="center"
            app:lottie_fileName="REGISTER_LOTTE.json"
            />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:background="@drawable/back"
        android:layout_marginBottom="15dp"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/et_username_register"
            android:hint="   Email"
            android:padding="5dp"
            android:background="@drawable/back"
            android:textStyle="italic"
            android:textSize="15dp"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:inputType="text"
            android:layout_margin="10dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:background="@drawable/back"
        android:layout_marginBottom="15dp"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/et_fullname_register"
            android:hint="  Full Name"
            android:textStyle="italic"
            android:background="@drawable/back"
            android:padding ="5dp"
            android:drawableStart="@drawable/ic_baseline_account_box_24"
            android:layout_margin="10dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:background="@drawable/back"
        android:layout_marginBottom="15dp"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/et_address_register"
            android:hint=" Address"
            android:padding="5dp"
            android:background="@drawable/back"
            android:drawableStart="@drawable/ic_baseline_add_location_24"
            android:layout_margin="10dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:background="@drawable/back"
        android:layout_marginBottom="15dp"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/et_password_register"
            android:hint="  Password"
            android:textStyle="italic"
            android:padding="5dp"
            android:background="@drawable/back"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:layout_margin="10dp"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:background="@drawable/back"
        android:layout_marginBottom="15dp"
        >

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/et_mobilenumber"
            android:hint="  Enter Your Mobile Number"
            android:drawableStart="@drawable/ic_baseline_local_phone_24"
            android:background="@drawable/back"
            android:padding="5dp"
            android:textStyle="italic"
            android:inputType="number"
            android:layout_margin="10dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_gravity="center"
        android:background="@drawable/back"
        app:backgroundTint="@color/white"
        android:textColor="@color/main_color_app"

        android:id="@+id/btn_register_user"
        android:layout_margin="20dp"
        />

    </LinearLayout>
    </ScrollView>
</LinearLayout>